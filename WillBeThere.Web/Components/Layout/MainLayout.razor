@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
<MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        Ottleszek.hu
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="25" Anchor="Anchor.Left">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Ottleszek.hu</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu/>
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}